<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "Home", "/" %>
      <%= link_to "Profile", "/profile" if current_user %>
      <%= link_to "All Items", "/items"%>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "Merchant Dashboard" if current_merchant? %>
      <% if current_admin? %>
        <%= link_to "All Users" %>
        <%= link_to "Admin Dashboard" %>
      <% end %>
      <% unless current_user %>
        <%= link_to "Login", "/login" %>
        <%= link_to "Register", "/register" %>
      <% end %>
      <%= link_to "Cart: #{cart.total_items}", "/cart" unless current_admin? %>
      <%= link_to "Logout", "/logout" if current_user %>
      <div id = "logged-as">
        <p><%= "Logged in as #{current_user.name}" if current_user %></p>
      </div>
    </nav>

    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg.html_safe %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
