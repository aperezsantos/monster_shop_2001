<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
       <% if current_user? || current_merchant? || current_admin? %>
         <%= link_to "Profile" %>
         <%= link_to "Logout" %>
       <% end %>
         <%= link_to "Home", "/" %>
         <%= link_to "All Merchants", "/merchants"%>
         <%= link_to "All Items", "/items"%>
         <%= link_to "Cart: #{cart.total_items}", "/cart" %>
       <% if !current_user? && !current_merchant? && !current_admin? %>
         <%= link_to "Login", "/login" if !logged_in? %>
         <%= link_to "Logout", "/logout", method: :delete if logged_in? %>
         <%= link_to "Register", "/register" if !logged_in? %>
       <% end %>
       <% if current_merchant? %>
        <%= link_to "Merchant Dashboard" %>
      <% end %>
      <% if current_admin? %>
        <%= link_to "Admin Dashboard" %>
        <%= link_to "All Users" %>
     <% end %>
     </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
