<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item" id = <%= "merchant_#{merchant.id}"%>>
      <h2><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %></h2>
      <% if merchant.active %>
        <p><%= button_to "Disable", "/admin/merchants/#{merchant.id}", params: {type: :disable}, method: :patch %></p>
      <% else %>
        <p>This account has been disabled.</p>
      <% end %>
    </section>
  <% end %>
</section>
